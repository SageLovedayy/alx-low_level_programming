# Makefile

# Compiler
CC = gcc
# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic
# Source files
SRC = main.c school.c
# Object files
OBJ = $(SRC:.c=.o)
# Target executable
NAME = school

.PHONY: all clean oclean fclean re

# Build rule for the target executable with m.h required
all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)
# Target to clean up generated files
clean:
	$(RM) *~ $(NAME)
# Target to clean up object files
oclean:
	$(RM) $(OBJ)
# Target to clean everything
fclean: clean oclean
# Target to force recompile everything
re: fclean all
